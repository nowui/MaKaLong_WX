<view class="container">
  <view class="header"></view>
  <view class="weui-panel weui-panel_access" hover-class="weui-cell_active" bindtap="handleUser">
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_appmsg">
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <image class="weui-media-box__thumb" src="{{member.user_avatar}}" />
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title">
            <view>{{member.user_name}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title margin-top">
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="handleOrder">
      <view class="weui-cell__hd">
        <image src="/image/form.svg" style="margin-right: 5px; margin-top: 6px; width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">我的订单</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="handleVideo">
      <view class="weui-cell__hd">
        <image src="/image/video.svg" style="margin-right: 5px; margin-top: 5px; width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">我的视频</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </view>
  </view>
</view>