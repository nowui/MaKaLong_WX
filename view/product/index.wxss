.video-name {
  margin-top: 5px;
  margin-left: 10px;
}

.index-product-item-view {
  position: relative;
  padding: 5px;
  height: 40px;
  background-color: #fff;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.index-product-item-view-icon {
  position: absolute;
  left: 10px;
  width: 40px;
  height: 40px;
  border-radius: 25px;
  overflow: hidden;
}

.index-product-item-view-icon-image {
  width: 40px;
  height: 40px;
  background-size: contain;
  background-repeat: no-repeat;
}

.index-product-item-view-name {
  position: absolute;
  left: 60px;
  top: 7px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.index-product-item-view-price {
  position: absolute;
  left: 58px;
  top: 25px;
  color: #c81623;
}

.index-product-item-view-is-pay {
  position: absolute;
  right: 10px;
  top: 15px;
  color: #666666;
}

.product-detail {
  background-color: #fff;
}

.footer-cart {
  float: left;
  width: 20%;
  height: 50px;
  color: #7a7e83;
  text-align: center;
  background-color: #fff;
}

.footer-cart:after {
  content: " ";
  position: absolute;
  width: 20%;
  left: 0px;
  top: 0px;
  right: 0px;
  bottom: 0px;
  border-right: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.footer-icon {
  position: relative;
  height: 25px;
  margin-top: 5px;
}

.footer-icon-image {
  width: 25px;
  height: 25px;
}

.footer-favor {
  float: left;
  width: 20%;
  height: 50px;
  color: #7a7e83;
  text-align: center;
  background-color: #fff;
}

.footer-add-cart {
  float: left;
  width: 30%;
  height: 50px;
  line-height: 50px;
  font-size: 14px;
  color: #fff;
  text-align: center;
  background-color: #ff9301;
}

.footer-total {
  float: left;
  width: 70%;
  height: 50px;
  line-height: 50px;
  font-size: 14px;
  background-color: #fff;
}

.footer-total-text {
  text-align: right;
  margin-right: 10px;
}

.footer-buy {
  float: left;
  width: 30%;
  height: 50px;
  line-height: 50px;
  font-size: 14px;
  color: #fff;
  text-align: center;
  background-color: #1AAD19;
}

.weui-tab__content {
  padding: 10px;
  padding-bottom: 100px;
  text-align: left;
}
